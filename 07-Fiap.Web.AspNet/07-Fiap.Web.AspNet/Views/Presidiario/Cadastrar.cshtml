@model  Presidiario
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar Presidiario</h1>

<form asp-action="cadastrar">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataEntrada"></label>
        <input asp-for="DataEntrada" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataSaida"></label>
        <input asp-for="DataSaida" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NivelEscolaridade"></label>
        <select asp-for="NivelEscolaridade" class="form-control" asp-items="@Html.GetEnumSelectList<NivelEscolaridade>()">
            <option value="0">Selecione</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Cela"></label>
        <select asp-for="CelaId" asp-items="@ViewBag.celas" class="form-control">
            <option value="0">Selecione</option>
        </select>
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary"/>
</form>
