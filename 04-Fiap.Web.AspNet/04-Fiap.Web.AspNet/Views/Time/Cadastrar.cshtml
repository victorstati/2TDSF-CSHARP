@model Time;


@{
    ViewData["Title"] = "Cadastrar";
}



<h1>Cadastrar Time</h1>

<hr />

<h2>@TempData["msg"]</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Cadastrar" asp-controller="Time">
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DataFundacao">Data de fundação</label>
                <input asp-for="DataFundacao" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="FolhaPagamento">Folha de Pagamento</label>
                <input asp-for="FolhaPagamento" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="Classificado" />
                <label asp-for="Classificado">Classificado</label>
            </div>

            <div class="form-group">
                <label asp-for="Vitorias">Vitórias</label>
                <input asp-for="Vitorias" class="form-control" />
            </div>
            <br />
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
            <br />
            <a asp-controller="Time" asp-action="Listar" class="btn btn-primary mt-4">Listar</a>
        </form>
    </div>
</div>

